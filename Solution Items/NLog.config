<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <!-- optional, add some variables
  https://github.com/nlog/NLog/wiki/Configuration-file#variables
  -->
  <variable name="logDirectory" value="${basedir}/Logs"/>

  <!--
  See https://github.com/nlog/nlog/wiki/Configuration-file
  for information on customizing logging rules and outputs.
   -->
  <targets>

    <!--
    add your targets here
    See https://github.com/nlog/NLog/wiki/Targets for possible targets.
    See https://github.com/nlog/NLog/wiki/Layout-Renderers for the possible layout renderers.
    -->

    <!--
    Write events to a file with the date in the filename.
    <target xsi:type="File" name="f" fileName="${basedir}/logs/${shortdate}.log"
            layout="${longdate} ${uppercase:${level}} ${message}" />
    -->
    <!--ColoredConsole-->
    <target name="coloredConsole" xsi:type="ColoredConsole" layout="${longdate} `${callsite}` [${uppercase:${level}}] - ${message}"  />
    <!--Info File-->
    <target name="asyncInfoFile" xsi:type="AsyncWrapper">
      <target name="logfile" xsi:type="File" fileName="${logDirectory}\info.txt" concurrentWrites="true" keepFileOpen="false"
          archiveFileName="info.{#}.txt" archiveNumbering="DateAndSequence" archiveAboveSize="10240000"
          archiveDateFormat="yyyyMMdd" layout="${longdate} `${callsite}` [${level}] - ${message}" />
    </target>
    <!--Debug File-->
    <target name="asyncDebugFile" xsi:type="AsyncWrapper">
      <target name="logfile" xsi:type="File" fileName="${logDirectory}\debug.txt" concurrentWrites="true" keepFileOpen="false"
          archiveFileName="debug.{#}.txt" archiveNumbering="DateAndSequence" archiveAboveSize="10240000"
          archiveDateFormat="yyyyMMdd" layout="${longdate} `${callsite}` [${level}] - ${message}" />
    </target>
    <!--Error File-->
    <target name="asyncErrorFile" xsi:type="AsyncWrapper">
      <target name="logfile" xsi:type="File" fileName="${logDirectory}\error.txt" concurrentWrites="true" keepFileOpen="false"
          archiveFileName="error.{#}.txt" archiveNumbering="DateAndSequence" archiveAboveSize="10240000"
          archiveDateFormat="yyyyMMdd" layout="${longdate} `${callsite}` [${level}] - ${message}" />
    </target>    
  </targets>

  <rules>
    <!-- add your logging rules here -->

    <!--
    Write all events with minimal level of Debug (So Debug, Info, Warn, Error and Fatal, but not Trace)  to "f"
    <logger name="*" minlevel="Debug" writeTo="f" />
    -->
    <logger name="*.Info" minlevel="Info" writeTo="asyncInfoFile" />
    <logger name="*.Debug" minlevel="Debug" writeTo="asyncDebugFile" />
    <logger name="*.Error" minlevel="Error" writeTo="asyncErrorFile" />
    <logger name="*.ColoredConsole" minlevel="Info" writeTo="coloredConsole" />

  </rules>
</nlog>
